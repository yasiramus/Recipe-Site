<!DOCTYPE html>
<html lang="en">
<%-include ('./partials/head') %>

    <body>
        <%-include ('./partials/nav2') %>
            <article>
                <form class="Loginform ">
                    <div class="form-row">
                        <label for="FullName" class="form-label">Fullname</label>
                        <input type="text" name="fullName" placeholder="Enter fullname" class="form-input" autocomplete="off">
                        <div class="fullNameError" style="color: tomato"></div>
                    </div>
                    <div class="form-row">
                        <label for="Username" class="form-label">Username</label>
                        <input type="text" name="userName" placeholder="Enter username" class="form-input" autocomplete="off">
                        <div class="userNameError" style="color: tomato"></div>
                    </div>
                    <div class="form-row">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" name="email" placeholder="Enter email" class="form-input" autocomplete="off">
                        <div class="emailError" style="color: tomato"></div>
                    </div>
                    <div class="form-row">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" name="password" placeholder="Enter password"
                            class="form-input" autocomplete="off">
                            <div class="passwordError" style="color: tomato"></div>
                    </div>
                    <div class="form-row">
                        <label for="Confirm Password" class="form-label">Confirm Password</label>
                        <input type="password" name="confirmPassword" placeholder="Re enter previous password"
                            class="form-input" autocomplete="off">
                            <div class="confirmPasswordError" style="color: tomato"></div>
                    </div>
                    <button type="submit" class="btn btn-block"> SignUp </button>
                    <div>
                        <p class="userSignUp">By clicking "Sign up" you agree to our Terms of Service.</p>
                        <p class="userSignUp">Already have an account? | <a href="/login">LogIn</a></p>
                    </div>
                </form>
            </article>
            <!-- footer -->
            <%-include('./partials/footer')%>
                <!-- footer ends -->
                <script src="../js/main.js"></script>
                <script src="../js/nav.js"></script>
                <script src="../js/register.js"></script>
    </body>

</html>