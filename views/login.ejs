<!DOCTYPE html>
<html lang="en">
<%-include ('./partials/head') %>

    <body>
        <%-include ('./partials/nav2') %>
        <article>
            <form action="/login" method="post" class="Loginform ">
                <div class="form-row">
                    <label for="Username" class="form-label">Username</label>
                    <input type="text" name="username" placeholder="Enter name of username" class="form-input">
                </div>
                <div class="form-row">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" name="email" placeholder="Enter name of email" class="form-input">
                </div>
                <div class="form-row">
                    <label for="Recipe Password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Enter name of password" class="form-input">
                </div>
                <button type="submit" class="btn btn-block"> LogIn </button>
                <div>
                    <p class="userSignUp">Already have an account? |<a href="/register">SignUp</a></p>
                </div>
            </form>
        </article>
            <!-- footer -->
            <%-include('./partials/footer')%>
                <!-- footer ends -->
                <script src="../js/main.js"></script>
                <script src="../js/nav.js"></script>
    </body>
</html>